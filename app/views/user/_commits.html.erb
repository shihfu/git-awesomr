<% unless @commits_ach_url_1 %>
  <br>You have <%= @commits_all %> total commits over the past year, you need 50 to unlock level 1.
<% end %>

<% if @commits_ach_url_1 %>
  <img src="/images/outline_seat_belt.png" alt="Lvl. 1" class="img-achievement-1">
  <% unless @commits_ach_url_2 %>
    <br>You have <%= @commits_all %> total commits over the past year, you need 75 to unlock level 2.
  <% end %>
<% end %>

<% if @commits_ach_url_2 %>
  <img src="/images/solid_seat_belt.png" alt="Lvl. 2" class="img-achievement-2">
  <% unless @commits_ach_url_3 %>
    <br>You have <%= @commits_all %> total commits over the past year, you need 200 to unlock level 3.
  <% end %>
<% end %>

<% if @commits_ach_url_3 %>
  <img src="/images/flat_seat_belt.png" alt="Lvl. 3" class="img-achievement-3">
  <br>You have <%= @commits_all %> total commits over the past year.
<% end %>

<div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: <%= if @progress_bar_commits.to_i > 100 then 100 else @progress_bar_commits.to_i end %>%; min-width: 2em;">
    <%= if @progress_bar_commits.to_i > 100 then 100 else @progress_bar_commits.to_i end %>%
  </div>
</div>