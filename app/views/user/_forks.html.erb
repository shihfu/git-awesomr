
<% forks_all = 0%>
<% @user.repos.each do |repo| %>
<% forks_all += repo.forks_count %>
<% end %>

<%achievement_name = @achievement.where name: "Forks"%>
<%achievements = []%>
<%achievements = achievement_name.select {|a| a.criteria <= forks_all}%>
<%forks_ach_url_1 = achievements[0][:url] if achievements[0]%>
<%forks_ach_url_2 = achievements[1][:url] if achievements[1]%>
<%forks_ach_url_3 = achievements[2][:url] if achievements[2]%>

<%forks_criteria = 0%>
<%forks_criteria = achievement_name[2][:criteria]%>

<%progress_bar = forks_all/forks_criteria.to_f*100 %>

<%if achievements[0]%>
<img src="/images/outline_fork.png" alt="Lvl. 1" class="img-achievement-1">
<%@total_flags += 1 %>
<%end%>

<%if achievements[1]%>
<img src="/images/solid_fork.png" alt="Lvl. 2" class="img-achievement-2">
<%@total_flags += 1 %>
<%end%>

<%if achievements[2]%>
<img src="/images/flat_fork.png" alt="Lvl. 3" class="img-achievement-3">
<%@total_flags += 1 %>
<%end%>

<br>Your repositories have been forked <%=forks_all%>  times<br>
<div class="progress">
<div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: <%=progress_bar%>%;">
  <%=progress_bar.to_i%>%
</div>
</div>
